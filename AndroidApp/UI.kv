                            pos_hint:{'x':0.3,'y':0.65}
                            color:0,1,0,1
                        Label:
                            text:'For any additional queries you can contact the developer'
                            size_hint:0.5,0.1
                            pos_hint:{'x':0.3,'y':0.60}
                            color:0,1,0,1
                        Label:
                            text:'on:darkemperorVKO@gmail.com'
                            size_hint:0.5,0.1
                            pos_hint:{'x':0.3,'y':0.55}
                            color:0,1,0,1


        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer



